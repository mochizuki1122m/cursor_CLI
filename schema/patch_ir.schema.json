{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schema/patch_ir.schema.json",
  "title": "PatchIR",
  "type": "object",
  "additionalProperties": false,
  "required": ["task_id", "patches"],
  "properties": {
    "task_id": { "type": "string", "minLength": 1 },
    "patches": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "hunk"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "hunk": { "type": "string", "minLength": 1, "pattern": "@@" },
          "risk": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
